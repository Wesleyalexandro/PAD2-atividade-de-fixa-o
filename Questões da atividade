// 1— crie uma função que retorna a string “Olá,” concatenada com um argumento
tex( a ser passado para função) e com ponto de exclamação “!” o final.

function question 1(text) {
 return 'Ola' + text + '!'
 }
 
 // 2 – Crie uma função que dado dois valores e uma Callback(passados como parâmetros),
mostre no console a soma, subtração, multiplicação e divisão desses valores, dependendo da função Callback.

function question 2 soma(w, n) {

    return w + n;

}

function subtracao(w, n) {

    return w - n;

}

function multiplicacao(w, n) {

    return w * n;

}

function divisao(w, n) {

    return w / n;

}

function calculadora(w, n, callback) {

    console.log(callback(w, n));

}

// 3 – Crie uma função que verifica se um número inteiro passado como parâmetro
é divisível por um numero passado por uma Callback e retorne true ou false.

function question 3 lk(x, callback) {

    return callback(x, y);

}

var enche = lk(15, function(x, y) {

    if(x % y == 0){

        return true;

    } else {

        return false;

    }

});

enche(15, 3);

// 4 – Crie uma função que recebe um número (de 1 a 12) e retorne o mês correspondente como uma string. 
Por exemplo, se a entrada for 2, a função deverá retornar “fevereiro”, pois este é o 2° mês.

function question 4 numMes(num)

//questao 4
function numMeses(num) {
  if (num == 1) {
    console.log("janeiro")
  }
  if (num == 2) {
    console.log("Fevereiro")
  }
  if (num == 3) {
    console.log("Março")
  }
  if (num == 4) {
    console.log("Abril")
  }
  if (num == 5) {
    console.log("Maio")
  }
  if (num == 6) {
    console.log("Junho")
  }
  if (num == 7) {
    console.log("Julho")
  }
  if (num == 8) {
    console.log("Agosto")
  }
  if (num == 9) {
    console.log("Setembro")
  }
  if (num == 10) {
    console.log("Outubro")
  }
  if (num == 11) {
    console.log("Novembro")
  }
  if (num == 12) {
    console.log("Dezembro")
  }
}
numMeses(11)

  

  
  

// 5 – Crie uma função que receba dois números e retorne se o primeiro é maior ou igual ao segundo dependendo da função Callback.

function question 5 maior(x, y) {

    if (y > z) {

        return 'O primeiro número, maior que o segundo!';

    } else {

        return 'O segundo número, maior que o primeiro!';

    }

}
function igual(y, z) {

    if (y == z) {

        return ' Primeiro número é igual ao segundo';

    } else {

        return 'Primeiro número não é igual ao segundo';

    }

}

function compare(y, z, callback) {

    return callback(y, z);

}




  


    
   
    



  


  


   

  






























 



































